{% block form_row %}
	{% set field_type = form.vars.block_prefixes|last %}
		<div class="form-group">
			{{ form_label(form) }}
			<div class="input-group">
				{{ form_widget(form, { 'attr': { 'class': 'form-control' }}) }}
			</div>
			{{ form_errors(form) }}
		</div>
	{# {% if field_type == '_registration_form_agreeTerms' %}
	{% else %}
		<div class="form-group">
			{{ form_label(form) }}
			<div class="input-group">
				{{ form_widget(form, { 'attr': { 'class': 'form-control' } }) }}
			</div>
			{{ form_errors(form) }}
		</div>
	{% endif %} #}
{% endblock %}