{% block body %}
<div class="modal fade" id="reg-modal" tabindex="-1" aria-labelledby="modal-title" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modal-title">Modifier mon ampoule</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
        
            <div class="modal-body">
        	{% form_theme modalModifyBulbForm 'form/modify_bulb_form.html.twig' %}
	        {{ form_start(modalModifyBulbForm) }}

            <div>
                
                <div class="row">
                    <div class="col-6 d-flex justify-content-center">
                        {{ form_row(modalModifyBulbForm.label, {'label': 'Nom de l\'ampoule :', 'attr': {'placeholder': ''}}) }}
                    </div>
                        
                    <div class="col-6 d-flex justify-content-center">
                        {{ form_row(modalModifyBulbForm.room_label, {'label': 'Nom de la pièce :', 'attr': {'placeholder': ''}}) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-6 d-flex justify-content-center">
                        {{ form_row(modalModifyBulbForm.model_id, {'label': 'Modèle :', 'attr': {'placeholder': ''}}) }}
                    </div> 

                    <div class="col-6 d-flex justify-content-center">
                        {{ form_row(modalModifyBulbForm.wifi, {'label': 'Réseau WiFi :', 'attr': {'placeholder': ''}}) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-6 d-flex justify-content-center">
                        {{ form_row(modalModifyBulbForm.place_id, {'label': 'Localisation :', 'attr': {'placeholder': ''}}) }}
                    </div>

                    <div class="col-6 d-flex justify-content-center">
                        {{ form_row(modalModifyBulbForm.mood_id, {'label': 'Ambiance :', 'attr': {'placeholder': ''}}) }}
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-6 d-flex justify-content-center">
                        {{ form_row(modalModifyBulbForm.color, {'label': 'Couleur :', 'attr': {'class': 'colorWheel'}}) }}
                    </div>

                    <div class="col-6 d-flex justify-content-center">
                        {{ form_row(modalModifyBulbForm.luminosity, {'label': 'Luminosité :', 'attr': {'class': 'opacityRange'}}) }}
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-6 d-flex justify-content-center">
                        {{ form_row(modalModifyBulbForm.is_on, {'label': 'Etat :'}) }}
                    </div>
                </div>
            
            </div>

            <div class="row">
                <div class="modal-footer col-12 d-flex justify-content-center">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                    <button type="submit" name="add_bulb_submit" class="btn btn-warning btn-block">Enregistrer</button>
                </div>
            </div>

        {{ form_end(modalModifyBulbForm) }}
      </div>
    </div>
  </div>
</div>

{% endblock %}

