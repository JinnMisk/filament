{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link rel="stylesheet" href="{{asset('styles/dashboard.css')}}">
<link rel="stylesheet" href="{{asset('styles/icons.css')}}">
{% endblock %}
{% block body %}
        <h2>Mes ampoules</h2>
        <div class="row w-100">
            <div>
{# DÉGRISER LE FOR ET SES VARIABLES QUAND ON SERA CONNECTÉ À LA BASE DE DONNÉES ET CONNDITION S'IL N'Y A RIEN #}
                {# {% for bulb in bulbs %} #}
                <div class="col-12 d-flex flex-row justify-content-evenly align-items-center border rounded-2 border-bottom-0 p-2 borderYellow">
                    <div class="bulb"></div>
                    <p class="d-flex align-items-center w-25 p-2 mb-0">{# {{ bulb.label }} #}Plafonnier</p>
                    <div>
                        <input class="colorWheel" type="color" id="head" name="head" value="#e66465" />
                    </div>
                    
                    <div class="p-2 d-flex align-items-center"><input class="opacityRange" type="range" min="0" max="100"/></div>
                    <label class="switch p-2">
                        {# TROUVER COMMENT INSÉRER LA VALEUR ENREGISTRÉE DANS LA BASE DE DONNÉES {{ bulb.luminosity }}#}
                        <input type="checkbox">
                        <span class="slider round"></span>
                    </label>
                </div>
    
                <div class="col-12 d-flex flex-row justify-content-evenly align-items-center border rounded-2 border-bottom-0 p-2 borderYellow">
                    <div class="bulb"></div>
                    <p class="d-flex align-items-center w-25 p-2 mb-0">Lampe</p>
                    <div>
                        {# TROUVER COMMENT INSÉRER LA VALEUR ENREGISTRÉE DANS LA BASE DE DONNÉE ET ENTRÉE PAR L'UTILISATEUR {{ bulb.color }}#}
                        <input class="colorWheel" type="color" id="head" name="head" value="#e66465" />
                    </div>
                    
                    <div class="p-2 d-flex align-items-center"><input type="range" min="0" max="1"/></div>
                    <label class="switch p-2">
                        <input type="checkbox">
                        <span class="slider round"></span>
                    </label>
                </div>
                {# {% endfor %} #}
                {# Interaction utilisateur ajout d'une nouvelle ampoule #}
                <div class="d-flex justify-content-center border rounded-2 borderYellow">{# <i class="icon-plus"></i> #} <img class="icon add" src="{{ asset('icones/plus-solid.svg') }}" alt="icône ajout"> </div>
            </div>
        </div>

    <script src="{{ asset('js/colorOpacity.js')}}"></script>
    <script src="{{ asset('js/add.js')}}"></script>
    
    
{% endblock %}
