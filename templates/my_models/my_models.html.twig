{% extends 'base.html.twig' %}

{% block title %}Les modèles
{% endblock %}

{% block body %}
	<main>
		<div class="container mt-4 mb-4">

			<h1 class="mt-2 mb-4">Les modèles</h1>

			<div class="row d-flex justify-content-around">

					<!-- SECTION DE GAUCHE - LES STATISTIQUES -->
					{% include('dashboard_stats/dashboardStats.html.twig') %}
                    
                    <!-- SECTION CENTRALE - LISTE DES MODÈLES -->
                    <div class="col-5 border border-3 border-black rounded-2 d-flex align-items-center flex-column pt-3 pb-3">
                        <div class="row w-100">
                        
                            <h2 class="text-center pb-2">Les Modèles</h2>
						<div>
							<table>
								<thead>
									<tr>
										<th scope="col">Nom</th>
										<th scope="col">Couleur</th>
										<th scope="col">Luminosité</th>
									</tr>
								</thead>
								<tbody>
									{% for model in models %}
										<tr>
											<td>{{model.name}}</td>
 											<td>{{model.reference}}</td>
											<td>{{model.hoursmax}}</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>
							<div class="d-flex justify-content-center">
								<button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#reg-modal">
                                	Ajouter un modèle
                                </button>
							</div>
						</div>
					</div>
				</div>
				{# <div class="col-2 border border-3 border-black rounded-2 d-flex align-items-start flex-column pt-3 pb-3">{% include('dashboard_menu/dashboardMenu.html.twig') %}</div> #}
			</div>
		</main>
	{% endblock %}
