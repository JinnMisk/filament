{% extends 'base.html.twig' %}

{% block title %}Mes programmations
{% endblock %}

{% block body %}
	<main>
		<section>
			{% for schedule in schedules %}
				<div class="container">
					<div class="row">
						<div class="text-center">
							<h1>{{schedule.label}}</h1>
						</div>
					</div>
					<div class="row">
						<div class="text-center">
							<h3>Début :
								{{schedule.getStartDayDMY}}
							</h3>
							<h3>Heure :
								{{schedule.getStartHourHM}}
							</h3>
							<h3>Fin :
								{{schedule.getEndDayDMY}}
							</h3>
							<h3>Heure :
							    	{{schedule.getEndHourHM}}
							</h3>
							<h3>Récurrence :
								{{schedule.recurrence}}
							</h3>
						</div>
					</div>
				</div>
			{% endfor %}
		</section>
	</main>
{% endblock %}
